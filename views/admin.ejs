<html>
<head>
<%- include("partials/admin_partial.ejs",{data:data}) %>
<link rel="stylesheet" href="/css-files/ecom.css" >
<h1 id="welcome"> Welcome to Alibaba</h1>
</head>
<body>
<% if(err){%>
 <div id="error"><h1><%=message%></h1></div>
<% }%>
 <div>
 <h1 id="text" >Your added products</h1>
  <div class="itemContainer"  >
  <% items.forEach(function(item){%>
   <div class="products" >
     <img class="image" src="<%=item.itemImage%>">
     <h3> <%= item.itemName %> </h3>
     <h4>Quantity left : <%=item.itemQuantity%> </h4>
     <button  class="descBtn" >Description</button>
     <button id="<%=item._id%>" class="cartBtn" >Delete</button>
     <button id="<%=item._id%>" class="adminUpdateBtn" >Update</button>
     
      <div>
      <h2> price : <%= item.itemPrice %> </h2>
      <p id="description"> <%= item.itemDescription %> </p>
      </div>
   </div>
  <%})%>
 </div>
  <form method="get" action="/load-more">
  <button  class="viewmore">Show more</button>
  </form>
</div>
</body>
<script src="admin.js" >
 var errorDiv=document.getElementById("error");
  setTimeout(function(){
  errorDiv.style.display="none";
},5000)
</script>
</html>