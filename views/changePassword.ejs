<html>

<head>
  <link rel="stylesheet" href="/css-files/login-signup.css">
</head>

<body>
  <div class="change-password-container">
    <% if(err){%>
      <div id="error">
        <h1>
          <%=message%>
        </h1>
      </div>
      <% }%>
        <h1 class="change-password-title"> Reset Password </h1>
        <form method="post" action="/changePassword/:id">
          <h2 class="login-form-label"> Enter New Password </h2>
          <input class="login-form-input" required name="newPassword" placeholder="New password" />
          <h2 class="login-form-label"> Confirm New Password </h2>
          <input class="login-form-input" required name="rePassword" placeholder="Confirm password" />
          <input class="button" type="submit" value="UPDATE PASSWORD" />
        </form>
  </div>

</body>
<div class="change-password-footer">
  <p id="paraline"> want to change Password later? <a id="anchor" href="/guest">Back to Homepage!</a> </p>
</div>
<script>
  var errorDiv = document.getElementById("error");
  setTimeout(function () {
    errorDiv.style.display = "none";
  }, 5000)
</script>

</html>